{
  "name": "designkit-dropdown",
  "version": "1.1.5",
  "description": "A Sass module for dropdown menus used in RightScale apps.",
  "homepage": "https://github.com/rightscale-design/designkit-dropdown#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-dropdown.git"
  },
  "author": {
    "name": "Jason Melgoza"
  },
  "license": "MIT",
  "keywords": [
    "sass",
    "css",
    "styles"
  ],
  "bugs": {
    "url": "https://github.com/rightscale-design/designkit-dropdown/issues"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/designkit-dropdown.css",
    "dist/designkit-dropdown.min.css",
    "src/_designkit-dropdown.scss",
    "src/index.scss"
  ],
  "scss": "src/_designkit-dropdown.scss",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "csso": "^3.1.1",
    "designkit-colors": "^1.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "serve": "^6.0.6"
  },
  "scripts": {
    "start": "npm run build:serve",
    "serve": "serve docs/ -o",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "build:scss": "node ./scripts/scss.js",
    "build:prefix": "node ./scripts/postcss.js",
    "build:minify": "node ./scripts/minify.js",
    "build:docs": "node ./scripts/docs.js",
    "build:readme": "node ./scripts/readme.js",
    "build:all": "npm run build:scss && npm run build:prefix && npm run build:minify && npm run build:docs && npm run build:readme",
    "build:serve": "run-p watch serve"
  }
}
